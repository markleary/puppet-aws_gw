# basic configuration

config setup
  charondebug="cfg 2, ike 3"

conn %default
	leftauth=psk
	rightauth=psk
	ike=aes256-sha256-modp2048s256,aes128-sha1-modp1024!
	ikelifetime=28800s
	aggressive=no
	esp=aes128-sha256-modp2048s256,aes128-sha1-modp1024!
	lifetime=3600s
	type=tunnel
	dpddelay=10s
	dpdtimeout=30s
	keyexchange=ikev1
	rekey=yes
	reauth=no
	dpdaction=restart
	closeaction=restart
	leftsubnet=0.0.0.0/0,::/0
	rightsubnet=0.0.0.0/0,::/0
	installpolicy=yes
	compress=no
	mobike=no
  leftupdown=<%= scope['aws_gs::params::conf_path'] %>/ipsec-vti.sh

conn AWS-VPC-GW1
	left=<%= @outside_cg %>
	right=<%= @outside_vpg_1 %>
	auto=start
	mark=100

conn AWS-VPC-GW2
	left=<%= @outside_cg %>
	right=<%= @outside_vpg_2 %>
	auto=start
	mark=200
